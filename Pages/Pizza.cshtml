@page
@model RazorPizzaria.Pages.PizzaModel
@{
    ViewData["Title"] = "Pizza";
}

<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <div class="main-text">
        <h1 class="display-4 text-capitalize text-black">Our great selection of pizzas</h1>
        <h4>Choose one or try our pizza builder</h4>
        <p><i>only one pizza per order</i></p>
    </div>
    <div class="container">
        <div class="col-12 mb-5 mt-5">
            <div class="w-100 row makeYourOwnDiv">
                <div class="col-4 d-flex">
                    <img src="~/images/Pizzas/Create.png" class="w-100">
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align: left;">Create your own pizza</h3>
                            <p style="text-align: left;">Make your own pizza with PizzaMaker!</p>
                            <a class="btn btn-primary" style="float: left;" asp-area="" asp-page="Forms/CustomPizza">Bring me pizza</a>
                        </div>
                    </div>
                </div>
            </div>
                @foreach (var pizza in Model.fakePizzaDB)
                {
                    var image = "~/images/Pizzas/" + pizza.ImageTitle + ".png";
                    <div class="col-4 mb5">
                        <img src="@image" class="w-100" asp-append-version="true"/>
                        <a 
                            asp-area="" 
                            asp-page="Checkout/Checkout" 
                            class="btn btn-primary mt-1" 
                            asp-route-ImageTitle="@pizza.ImageTitle"
                            asp-route-PizzaName="@pizza.PizzaName"
                            asp-route-PizzaPrize="@pizza.PizzaPrize"
                        >Get this pizza</a> 
                        <br>
                    </div>
                    
                }
        </div>
    </div>
</div>